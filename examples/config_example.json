{
  "hrrr": {
    "cache_dir": ".cache/hrrr",
    "domain": "conus",
    "product": "wrfprsf",
    "use_s3fs": true,
    "http_fallback": true,
    "download_workers": 6,
    "local_grib_dir": null,
    "keep_downloaded_files": true
  },
  "grid": {
    "half_width_east_m": 180000.0,
    "half_width_north_m": 180000.0,
    "min_altitude_m": -500.0,
    "max_altitude_m": 28000.0,
    "nx": 80,
    "ny": 80,
    "nz": 56,
    "gradient_step_m": 50.0,
    "wind_projection_mode": "heading"
  },
  "aircraft": {
    "mach": 1.05,
    "constant_altitude_m": 16500.0,
    "reference_sound_speed_mps": 340.29
  },
  "shock": {
    "emission_interval_s": 20.0,
    "rays_per_emission": 28,
    "downward_only": true,
    "azimuth_offset_deg": 0.0,
    "direction_reference": "earth_down"
  },
  "raytrace": {
    "ds_m": 300.0,
    "max_steps": 2500,
    "adaptive": true,
    "tol": 0.001,
    "min_step_m": 30.0,
    "max_step_m": 1500.0,
    "stop_on_exit": true
  },
  "runtime": {
    "start_time_iso": null,
    "end_time_iso": null,
    "max_emissions": 20,
    "ray_batch_size": 0
  },
  "visualization": {
    "enable_matplotlib": true,
    "enable_plotly": true,
    "enable_pyvista": true,
    "output_dir": "outputs",
    "make_animation": true,
    "write_html": true,
    "include_atmosphere": true
  }
}
